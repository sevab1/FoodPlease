<h1>Корзина</h1>
<h3>Cards#show</h3>
<p>Find me in app/views/cards/show.html.erb</p>



<% @order_items.each do |item| %>

    <h3><%= item.product.title %></h3>
    <h5><%= item.product.price %></h5>


    <%= form_for item, remote: true do |f| %>



        <%= f.hidden_field :product_id, :value => item.product.id %>
        <%= f.number_field :quantity, :value => item.quantity.to_i %>
        <%= f.submit "Обновить корзину "%>

        <%= link_to "Удалить", order_item_path(item), method: :delete, remote: true%>

    <% end %>
    <h2> Цена: <%= item.total %></h2>

<% end %>

<h3>К оплате <%= current_order.subtotal %> руб.</h3>
<h4><%= link_to 'Оплатить', class: 'btn btn-primary' %></h4>
